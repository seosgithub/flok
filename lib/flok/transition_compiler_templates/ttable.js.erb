ttable = {
  <% @transitions.each do |controller, actions| %>
      <%= controller %>: {
        <% actions.each do |from_action, to_actions| %>
            <%= from_action %>: {
              <% to_actions.each do |to_action, info| %>
                  <%= to_action %>: <%= info.to_json %>,
                <% end %>
            },
        <% end %>
        }
  <% end %>
}
